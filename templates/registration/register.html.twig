{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('select2') }}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('select2') }}
{% endblock %}

{% block body %}
	<div class='container-fluid section-6 py-7'>
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="row">
			<h2 class="d-flex flex-column align-items-center">
				<strong>S'inscrire</strong>
			</h2>
		</div>
		{{ form_start(registrationForm, {'attr': {'class': 'vpx-5 vpx-md-15 vpx-lg-25 vpx-xxl-30'} }) }}
        <div class="d-flex flex-wrap flex-column flex-md-row mb-3 justify-content-between gap-3">
		{{ form_row(registrationForm.firstName, {'label': 'Prénom', 'row_attr': {'class': 'w-100 w-md-45'} }) }}
		{{ form_row(registrationForm.lastName, {'label': 'Nom', 'row_attr': {'class': 'w-100 w-md-45'} }) }}
        </div>
        <div class="d-flex flex-wrap flex-column flex-md-row mb-3 justify-content-between gap-3">
		{{ form_row(registrationForm.mobTel, {'label': 'Téléphone mobile', 'row_attr': {'class': 'w-100 w-md-45'} }) }}
		{{ form_row(registrationForm.email, {'row_attr': {'class': 'w-100 w-md-45'} }) }}
        </div>
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		<div class='row'>
			<div class="d-flex flex-column flex-md-row mb-3 justify-content-between gap-3">
				<div class="w-100 w-md-60">
					<label for="eventZip" class="form-label">Choisir un code postal</label>
					{{ form_widget(registrationForm.zipCode, { 'attr': { 'class': 'js-data-example-ajax', 'style': 'width: 100%;'} }) }}					
				</div>
			</div>
		</div>		
		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn btn-info w-100">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
